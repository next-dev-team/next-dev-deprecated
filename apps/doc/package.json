{
  "private": true,
  "name": "dumi-app",
  "scripts": {
    "dev": "dumi dev",
    "build": "dumi build && pnpm build-tailwind",
    "publish": "gh-pages -d ./dist",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "build-tailwind": "npx tailwindcss -o global.css --minify"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "dumi": "^1.1.42",
    "lint-staged": "^10.0.7",
    "yorkie": "^2.0.0",
    "ui": "workspace:*",
    "tailwindcss": "^3.1.4",
    "postcss": "^8.4.14",
    "autoprefixer": "^10.4.7",
    "deploy:gh": "gh-pages -d ./dist",
    "gh-pages": "^4.0.0",
    "ahooks": "^3.5.0"
  }
}
